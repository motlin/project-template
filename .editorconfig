# EditorConfig helps maintain consistent coding styles across editors
# https://editorconfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# Default indentation - override in derived templates per language conventions
# TypeScript: tabWidth=4, useTabs=true
# Java: indent_size=4, spaces
indent_style = space
indent_size = 4

[*.md]
trim_trailing_whitespace = false

[*.{yml,yaml}]
indent_size = 2

[*.{json,json5,jsonc}]
indent_size = 2

[Makefile]
indent_style = tab

[justfile]
indent_style = space
indent_size = 4
